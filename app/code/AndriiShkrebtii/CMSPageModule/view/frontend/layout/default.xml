<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container htmlTag="div" htmlClass="color-wrapper" before="-">
                <container htmlTag="div" htmlClass="container">
                    <block class="Magento\Cms\Block\Block" name="info.message">
                        <arguments>
                            <argument name="block_id" xsi:type="string">info_message</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
