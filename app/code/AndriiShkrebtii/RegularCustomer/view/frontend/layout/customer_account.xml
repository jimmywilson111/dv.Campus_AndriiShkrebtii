<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="regular-customer-info"
                   ifconfig="AndriiShkrebtii_RegularCustomer/general/enabled"
            >
                <arguments>
                    <argument name="path" xsi:type="string">andriishkrebtii_regular_customer/view/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Regular Customer Page</argument>
                    <argument name="sortOrder" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
