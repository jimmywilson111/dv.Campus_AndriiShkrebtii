<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Framework\View\Element\Text\ListText"
                   name="loyalty-program-tab"
                   group="detailed_info"
            >
                <arguments>
                    <argument name="sort_order" xsi:type="string">40</argument>
                    <argument translate="true" name="title" xsi:type="string">Loyalty program for Regular Customers</argument>
                </arguments>
                <block class="Magento\Cms\Block\Block" name="loyal.program.message">
                    <arguments>
                        <argument name="block_id" xsi:type="string">loyalty_program_text</argument>
                    </arguments>
                </block>
                <block class="AndriiShkrebtii\RegularCustomer\Block\Product\View\DiscountRequestForm"
                       name="loyalty-program-button"
                       template="AndriiShkrebtii_RegularCustomer::catalog/product/view/discount/button.phtml"
                       group="detailed_info"
                />
                <block class="AndriiShkrebtii\RegularCustomer\Block\Product\View\DiscountRequestForm"
                       name="loyalty-program-form"
                       template="AndriiShkrebtii_RegularCustomer::catalog/product/view/discount/form.phtml"
                       group="detailed_info"
                />
                <block class="AndriiShkrebtii\RegularCustomer\Block\Product\View\DiscountRequestForm"
                       name="loyalty-program-requested-msg"
                       template="AndriiShkrebtii_RegularCustomer::catalog/product/view/discount/message.phtml"
                       group="detailed_info"
                />
            </block>
        </referenceBlock>
    </body>
</page>
